@using WebShop.Models;
@using S = Syrilium.Modules.BusinessObjects;
@using WebShop.Infrastructure;
<script type="text/javascript">
    $(window).load(function () { $('.flexsliderLogo').flexslider({ pauseOnAction: 'true',slideDirection: 'horizontal', controlNav: 'false', animation: 'slide', animationDuration: 1000, slideshowSpeed: 5000, pauseOnHover: 'false' }); })
</script>
@model WebShop.Models.SliderLogo
@{
    int i = 0;
    int picturesPerSlide = 2;
    Model.Request = Request;
}
@if(Model.PartnerId == null)
{
    if(Model.GetPartnerList().Count > 0)
    {
    <div class="" style="float:left; width:100%;">
        <div class="flexsliderLogo roundedCornersSmall">
            <div class="flex-direction-nav-container">
                &nbsp;
            </div>
            <ul class="slides">
                @foreach (S.Partner partner in Model.GetPartnerList())
                {
                    if (i % picturesPerSlide == 0)
                    {
                    @Html.Raw("<li>")
                    }             
                    <a href="@partner.URL" >
                        <img src="@partner.Logo" alt="@partner.Name"  onclick="" />
                    </a>
                
                    if (((i + 1) % picturesPerSlide) == 0)
                    {
                    @Html.Raw("</li>")
                    }
                    i++;
                }
            </ul>
        </div>
    </div>
}
}
